            </column>
        </addColumn>
    </changeSet>

    <changeSet author="Ruslan Pashin" id="20220411-4">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="smallint">select data_type from information_schema.columns
                where table_schema = 'users'
